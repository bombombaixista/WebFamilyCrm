@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<form method="post" asp-action="Index">
    <label>Email:</label>
    <input type="text" name="email" />
    <br />
    <label>Senha:</label>
    <input type="password" name="senha" />
    <br />
    <button type="submit">Entrar</button>
</form>

@if (ViewBag.Erro != null)
{
    <p style="color:red">@ViewBag.Erro</p>
}
